                    <div class="label">Email</div>
                    <input type="email" name="email" class="inputbox" placeholder="Please enter your email" required />
                    <div class="label">Password</div>
                    <input type="password" name="password" class="inputbox" placeholder="Please enter the password" required />
                    <div class="error"><%= errorLog %></div>
                    <button class="btn login-btn" id="logload">Login</button>
                </form>
            </div>
            <div class="mobile-login">
                <a href="/login/" title="Login">
                    <button class="btn login-btn" style="width: 100%;" id="redirect">Click here Login</button>
                </a>
            </div>
            
            <div class="outer-box reg">
                <form action="/register" name="myForm" method="POST" onsubmit="return validateForm()" class="login">
                    <div class="text">Create New Account</div>
                    <div class="label">Full Name</div>
                    <input type="text" name="name" class="inputbox" placeholder="Please enter your name" required />
                    <div class="label">Email</div>
                    <input type="email" name="email" class="inputbox" placeholder="Please enter your email" required />
                    <div class="label">Password</div>
                    <input type="password" name="password" class="inputbox" placeholder="Please enter the password" required />
                    <div class="error" id="reg"><%= errorReg %></div>
                    <button class="btn sign-btn" id="load">Create new account</button>
                    <div class="already">Already have account? <a href="/login/" title="login">Login</a></div>
                </form>
